{
  "name": "amberglass-cli",
  "version": "0.1.0",
  "description": "Terminal-based NS train departure board with split-flap aesthetic",
  "author": "Ben Zatrok",
  "license": "MIT",
  "type": "module",
  "bin": {
    "amberglass-cli": "./bin/cli.js"
  },
  "files": [
    "build",
    "bin"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "start": "node build/index.js",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "dependencies": {
    "ink": "^6.3.1",
    "react": "^19.1.0",
    "ink-spinner": "^5.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "date-fns": "^4.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "@types/node": "^22.15.0",
    "typescript": "^5.8.3",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.19.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "terminal",
    "train",
    "ns",
    "departure-board",
    "ink",
    "react"
  ]
}
